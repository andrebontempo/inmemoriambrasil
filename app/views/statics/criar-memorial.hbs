<main class="container my-5">
  <div
    class="p-5 rounded-4 shadow-lg text-white"
    style="background-color: #4f0e21;"
  >
    <h2 class="text-center mb-4 fw-bold">Criar Memorial</h2>

    <form
      action="/memorial/create-memorial"
      method="POST"
      class="mx-auto"
      style="max-width: 80%;"
    >

      <!-- Dados Pessoais -->
      <div
        class="border rounded p-4 mb-4"
        style="background-color: #4f0e21; color: white;"
      >

        <!-- Nome e Sobrenome -->
        <div class="row g-3">
          <div class="col-md-6">
            <label for="firstName" class="form-label">Primeiro Nome:</label>
            <input
              type="text"
              class="form-control"
              id="firstName"
              name="firstName"
              required
            />
          </div>
          <div class="col-md-6">
            <label for="lastName" class="form-label">Sobrenome:</label>
            <input
              type="text"
              class="form-control"
              id="lastName"
              name="lastName"
              required
            />
          </div>
        </div>

        <!-- Sexo e Parentesco -->
        <div class="row g-3 mt-3">
          <!--
          <div class="col-md-6">
            <label class="form-label">Sexo:</label>
            <div class="d-flex gap-3">
              <div class="form-check">
                <input
                  type="radio"
                  class="form-check-input"
                  id="male"
                  name="gender"
                  value="Masculino"
                  required
                />
                <label for="male" class="form-check-label">Masculino</label>
              </div>
              <div class="form-check">
                <input
                  type="radio"
                  class="form-check-input"
                  id="female"
                  name="gender"
                  value="Feminino"
                  required
                />
                <label for="female" class="form-check-label">Feminino</label>
              </div>
              <div class="form-check">
                <input
                  type="radio"
                  class="form-check-input"
                  id="other"
                  name="gender"
                  value="Outros"
                  required
                />
                <label for="other" class="form-check-label">Outros</label>
              </div>
            </div>
          </div>
          -->
          <div class="col-md-6">
            <label for="kinship" class="form-label">Parentesco:</label>
            <select class="form-select" id="kinship" name="kinship" required>
              <option value="">Selecione</option>
              <option value="amigo">Amigo</option>
              <option value="amiga">Amiga</option>
              <option value="avo">Avô</option>
              <option value="avo">Avó</option>
              <option value="filho">Filho</option>
              <option value="filha">Filha</option>
              <option value="irmao">Irmão</option>
              <option value="irma">Irmã</option>
              <option value="mae">Mãe</option>
              <option value="marido">Marido</option>
              <option value="pai">Pai</option>
              <option value="esposa">Esposa</option>
            </select>
          </div>
        </div>

        <!-- Nascimento -->
        <h4 class="mt-4 fw-bold">Nascimento</h4>
        <div class="row g-3">
          <div class="col-md-3">
            <label for="birthDate" class="form-label">Data:</label>
            <input
              type="date"
              class="form-control"
              id="birthDate"
              name="birth.date"
              required
            />
          </div>
          <div class="col-md-3">
            <label for="birthCity" class="form-label">Cidade:</label>
            <input
              type="text"
              class="form-control"
              id="birthCity"
              name="birth.city"
            />
          </div>
          <div class="col-md-3">
            <label for="birthState" class="form-label">Estado:</label>
            <input
              type="text"
              class="form-control"
              id="birthState"
              name="birth.state"
            />
          </div>
          <div class="col-md-3">
            <label for="birthCountry" class="form-label">País:</label>
            <input
              type="text"
              class="form-control"
              id="birthCountry"
              name="birth.country"
            />
          </div>
        </div>

        <!-- Falecimento -->
        <h4 class="mt-4 fw-bold">Falecimento</h4>
        <div class="row g-3">
          <div class="col-md-3">
            <label for="deathDate" class="form-label">Data:</label>
            <input
              type="date"
              class="form-control"
              id="deathDate"
              name="death.date"
              required
            />
          </div>
          <div class="col-md-3">
            <label for="deathCity" class="form-label">Cidade:</label>
            <input
              type="text"
              class="form-control"
              id="deathCity"
              name="death.city"
            />
          </div>
          <div class="col-md-3">
            <label for="deathState" class="form-label">Estado:</label>
            <input
              type="text"
              class="form-control"
              id="deathState"
              name="death.state"
            />
          </div>
          <div class="col-md-3">
            <label for="deathCountry" class="form-label">País:</label>
            <input
              type="text"
              class="form-control"
              id="deathCountry"
              name="death.country"
            />
          </div>
        </div>

      </div>

      <!-- Botão de Envio alinhado à direita -->
      <div class="d-flex justify-content-end mt-4">
        <button
          type="submit"
          class="btn btn-light fw-bold px-5 py-3 rounded-pill shadow"
          style="background-color: #ffffff; color: #4f0e21; border: 2px solid #4f0e21; transition: all 0.3s ease;"
          onmouseover="this.style.backgroundColor='#4f0e21'; this.style.color='white';"
          onmouseout="this.style.backgroundColor='#ffffff'; this.style.color='#4f0e21';"
        >
          Criar Memorial
        </button>
      </div>

    </form>
  </div>
</main>