<main class="container my-5">
  <!-- Bloco principal -->
  <div class="p-4 p-md-5 rounded-4 shadow-lg bg-primary text-white text-center">

    <div class="mx-auto" style="max-width: 960px;">
      <h1 class="fw-bold mb-3">Planos e Assinaturas</h1>
      <p class="lead mb-5">
        Comece gratuitamente no Plano Base.<br />
        Só paga se optar pelo plano Premium.
      </p>

      <!-- PLANOS -->
      <div class="row g-4">
        <!-- Plano Base -->
        <div class="col-md-6">
          <div class="card h-100 rounded-4 shadow-sm border-0 plan-card">
            <div class="card-body text-center">
              <i class="bi bi-heart fs-1 text-primary mb-3"></i>
              <h5 class="fw-bold text-primary">Plano Base</h5>
              <p class="text-muted small">
                Ideal para começar sem compromisso
              </p>

              <ul class="list-unstyled text-start mt-3">
                <li class="mb-2">
                  <i class="bi bi-check-circle-fill text-success me-2"></i>
                  Funcionalidades básicas
                </li>
                <li class="mb-2">
                  <i class="bi bi-check-circle-fill text-success me-2"></i>
                  Suporte por e-mail
                </li>
                <li>
                  <i class="bi bi-check-circle-fill text-success me-2"></i>
                  1 Memorial
                </li>
              </ul>

              <div class="mt-4">
                <span class="badge bg-secondary fs-6">Gratuito</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Plano Premium -->
        <div class="col-md-6">
          <div class="card h-100 rounded-4 shadow-sm border-0 plan-card">
            <div class="card-body text-center">
              <i class="bi bi-stars fs-1 text-primary mb-3"></i>
              <h5 class="fw-bold text-primary">Plano Premium</h5>
              <p class="text-muted small">
                Mais recursos e personalização
              </p>

              <ul class="list-unstyled text-start mt-3">
                <li class="mb-2">
                  <i class="bi bi-check-circle-fill text-success me-2"></i>
                  Todas as funcionalidades
                </li>
                <li class="mb-2">
                  <i class="bi bi-check-circle-fill text-success me-2"></i>
                  Suporte prioritário
                </li>
                <li>
                  <i class="bi bi-check-circle-fill text-success me-2"></i>
                  Múltiplos memoriais
                </li>
              </ul>

              <div class="mt-4">
                <span class="badge bg-primary fs-6">Premium</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- ASSINATURAS -->
      <h2 class="fw-bold text-white mt-5 mb-4">
        Assinatura Premium
      </h2>

      <div class="row g-4 justify-content-center">
        <!-- Mensal -->
        <div class="col-md-5">
          <div class="card h-100 rounded-4 shadow-sm border-0 plan-card">
            <div class="card-body text-center">
              <h5 class="fw-bold text-primary">Mensal</h5>
              <p class="fs-4 fw-bold text-dark mb-3">
                R$ 36,00
                <span class="fs-6 fw-normal text-muted">/mês</span>
              </p>
              <button class="btn btn-primary btn-lg w-100">
                Assinar agora
              </button>
            </div>
          </div>
        </div>

        <!-- Anual -->
        <div class="col-md-5">
          <div class="card h-100 rounded-4 shadow-sm border-0 plan-card">
            <div class="card-body text-center">
              <h5 class="fw-bold text-primary">Anual</h5>
              <p class="fs-4 fw-bold text-dark mb-3">
                R$ 360,00
                <span class="fs-6 fw-normal text-muted">/ano</span>
              </p>
              <span class="badge bg-success mb-3">
                Economize 16%
              </span>
              <button class="btn btn-primary btn-lg w-100 mt-2">
                Assinar agora
              </button>
            </div>
          </div>
        </div>
