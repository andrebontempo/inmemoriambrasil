<div class="container py-4">
    <h2 class="mb-4">Gerenciamento de Usuários</h2>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Perfil</th>
                <th>Criado em</th>
                <th class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>
                    {{#if (eq this.role "admin")}}
                    <span class="badge bg-danger">Admin</span>
                    {{else}}
                    <span class="badge bg-secondary">Usuário</span>
                    {{/if}}
                </td>
                <td>{{this.createdAt}}</td>
                <td class="text-end">

                    <a href="/accounts/edit/{{this._id}}" class="btn btn-sm btn-primary">
                        Editar
                    </a>

                    <form action="/accounts/delete/{{this._id}}" method="POST" class="d-inline"
                        onsubmit="return confirm('Tem certeza que deseja excluir este usuário?')">

                        <button type="submit" class="btn btn-sm btn-danger">
                            Excluir
                        </button>
                    </form>

                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <div class="d-flex justify-content-between align-items-center mt-3">

        <div></div>

        <nav>
            <ul class="pagination mb-0">

                {{#if hasPrev}}
                <li class="page-item">
                    <a class="page-link" href="?page={{prevPage}}&search={{search}}">Anterior</a>
                </li>
                {{/if}}

                <li class="page-item active">
                    <span class="page-link">
                        Página {{currentPage}} de {{totalPages}}
                    </span>
                </li>

                {{#if hasNext}}
                <li class="page-item">
                    <a class="page-link" href="?page={{nextPage}}&search={{search}}">Próxima</a>
                </li>
                {{/if}}

            </ul>
        </nav>

        <div>
            <a href="/accounts/logs" class="btn btn-outline-dark">
                Ver Logs
            </a>
        </div>

    </div>


</div>