<main class="container my-5">
    <section class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0 p-4 rounded-4">

                <div class="text-center mb-4">
                    <h2 class="fw-semibold">Redefinir senha</h2>
                    <p class="text-muted small mb-0">
                        Digite sua nova senha abaixo.
                    </p>
                </div>

                {{#if error}}
                <div class="alert alert-danger small">
                    {{error}}
                </div>
                {{/if}}

                {{#if success}}

                <div class="alert alert-success small">
                    {{success}}
                </div>

                <a href="/auth/login" class="btn btn-primary w-100 fw-semibold mt-3 rounded-pill">
                    Ir para login
                </a>

                {{else}}

                <form action="/auth/reset-password/{{token}}" method="POST" novalidate>

                    <input type="hidden" name="token" value="{{token}}" />

                    <!-- Nova Senha -->
                    <div class="mb-3">
                        <label for="password" class="form-label small fw-semibold">
                            Nova senha
                        </label>
                        <input type="password" id="password" name="password" class="form-control"
                            placeholder="Digite sua nova senha" required minlength="8" autocomplete="new-password" />
                    </div>

                    <!-- Confirmar Senha -->
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label small fw-semibold">
                            Confirmar nova senha
                        </label>
                        <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
                            placeholder="Confirme sua nova senha" required minlength="8" autocomplete="new-password" />
                    </div>

                    <button type="submit" class="btn btn-primary w-100 fw-semibold rounded-pill">
                        Redefinir senha
                    </button>

                </form>

                <div class="text-center mt-3">
                    <a href="/auth/login" class="small text-decoration-none">
                        Voltar para login
                    </a>
                </div>

                {{/if}}

            </div>
        </div>
    </section>
</main>