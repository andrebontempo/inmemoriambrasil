<main class="container my-5">
  <section class="row justify-content-center">
    <div class="col-md-6">
      <div class="card p-4">
        <h2 class="text-center mb-4">Criar Conta</h2>

        {{#if error}}
          <div class="alert alert-danger">{{error}}</div>
        {{/if}}

        <form action="/auth/register" method="POST" id="registerForm">
          <div class="mb-3">
            <input
              type="text"
              name="firstName"
              class="form-control"
              placeholder="Nome"
              value="{{firstName}}"
              required
            />
          </div>
          <div class="mb-3">
            <input
              type="text"
              name="lastName"
              class="form-control"
              placeholder="Sobrenome"
              value="{{lastName}}"
              required
            />
          </div>
          <div class="mb-3">
            <input
              type="email"
              name="email"
              class="form-control"
              placeholder="Email"
              value="{{email}}"
              required
            />
          </div>
          <div class="mb-3">
            <input
              type="password"
              name="password"
              id="password"
              class="form-control"
              placeholder="Senha"
              required
            />
          </div>
          <div class="mb-3">
            <input
              type="password"
              name="confirmPassword"
              id="confirmPassword"
              class="form-control"
              placeholder="Repetir Senha"
              required
            />
            <div
              id="passwordError"
              class="text-danger mt-2"
              style="display: none;"
            >As senhas não coincidem!</div>
          </div>
          <button type="submit" class="btn btn-primary w-100">Cadastrar</button>
        </form>

        <p class="text-center mt-3">
          Já tem uma conta?
          <a href="/auth/login">Entrar</a>
        </p>
      </div>
    </div>
  </section>
</main>