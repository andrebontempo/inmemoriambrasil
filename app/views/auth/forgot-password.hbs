<main class="container my-5">
    <section class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0 p-4 rounded-4">

                <div class="text-center mb-4">
                    <h2 class="fw-semibold">Recuperar Senha</h2>
                    <p class="text-muted small mb-0">
                        Informe o e-mail associado à sua conta.
                        Enviaremos instruções para redefinir sua senha.
                    </p>
                </div>

                {{#if error}}
                <div class="alert alert-danger small">
                    {{error}}
                </div>
                {{/if}}

                {{#if success}}
                <div class="alert alert-success small">
                    {{success}}
                </div>
                {{/if}}

                <form action="/auth/forgot-password" method="POST" novalidate>

                    <div class="mb-4">
                        <label for="email" class="form-label small fw-semibold">
                            Endereço de e-mail
                        </label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="exemplo@email.com"
                            required autocomplete="email" />
                    </div>

                    <button type="submit" class="btn btn-primary w-100 fw-semibold">
                        Enviar instruções
                    </button>

                </form>

                <div class="text-center mt-4 small">
                    Lembrou sua senha?
                    <a href="/auth/login" class="fw-semibold text-decoration-none">
                        Voltar para o login
                    </a>
                </div>

            </div>
        </div>
    </section>
</main>