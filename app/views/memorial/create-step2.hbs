<main class="container my-5">

  <div
    class="p-4 p-md-5 rounded-4 shadow-lg"
    style="background: #fff; border: 1px solid #eee;"
  >

    <h2 class="text-center mb-4 fw-bold" style="color: #4f0e21;">
      Etapa 2: Dados Pessoais
    </h2>

    <form
      action="/memorial/create-step2"
      method="POST"
      class="mx-auto"
      style="max-width: 600px;"
    >

      <!-- Nome e Sobrenome (readonly) -->
      <div class="mb-4">
        <label
          for="firstName"
          class="form-label fw-semibold"
          style="color: #4f0e21;"
        >Nome</label>
        <input
          type="text"
          class="form-control form-control-lg rounded-3"
          id="firstName"
          name="firstNameDisplay"
          value="{{step1Data.firstName}}"
          readonly
          style="background: #f2f2f2;"
        />
        <input type="hidden" name="firstName" value="{{step1Data.firstName}}" />
      </div>

      <div class="mb-4">
        <label
          for="lastName"
          class="form-label fw-semibold"
          style="color: #4f0e21;"
        >Sobrenome</label>
        <input
          type="text"
          class="form-control form-control-lg rounded-3"
          id="lastName"
          name="lastNameDisplay"
          value="{{step1Data.lastName}}"
          readonly
          style="background: #f2f2f2;"
        />
        <input type="hidden" name="lastName" value="{{step1Data.lastName}}" />
      </div>

      <!-- Parentesco -->
      <div class="mb-4">
        <label
          for="kinship"
          class="form-label fw-semibold"
          style="color: #4f0e21;"
        >Parentesco</label>
        <select
          class="form-select form-select-lg rounded-3"
          id="kinship"
          name="kinship"
          required
          style="background: #fafafa;"
        >
          <option value="">Selecione</option>
          {{#each kinships}}
            <option value="{{this.value}}">{{this.label}}</option>
          {{/each}}
        </select>
      </div>

      <!-- Nascimento -->
      <h4 class="fw-bold mb-3" style="color: #4f0e21;">Nascimento</h4>

      <div class="row g-3">
        <div class="col-md-6">
          <label
            class="form-label fw-semibold"
            style="color: #4f0e21;"
          >Data</label>
          <input
            type="date"
            class="form-control form-control-lg rounded-3"
            name="birth.date"
            required
            style="background: #fafafa;"
          />
        </div>
        <div class="col-md-6">
          <label
            class="form-label fw-semibold"
            style="color: #4f0e21;"
          >Cidade</label>
          <input
            type="text"
            class="form-control form-control-lg rounded-3"
            name="birth.city"
            style="background: #fafafa;"
          />
        </div>
        <div class="col-md-6">
          <label
            class="form-label fw-semibold"
            style="color: #4f0e21;"
          >Estado</label>
          <input
            type="text"
            class="form-control form-control-lg rounded-3"
            name="birth.state"
            style="background: #fafafa;"
          />
        </div>
        <div class="col-md-6">
          <label
            class="form-label fw-semibold"
            style="color: #4f0e21;"
          >País</label>
          <input
            type="text"
            class="form-control form-control-lg rounded-3"
            name="birth.country"
            style="background: #fafafa;"
          />
        </div>
      </div>

      <!-- Falecimento -->
      <h4 class="fw-bold mt-5 mb-3" style="color: #4f0e21;">Falecimento</h4>

      <div class="row g-3">
        <div class="col-md-6">
          <label
            class="form-label fw-semibold"
            style="color: #4f0e21;"
          >Data</label>
          <input
            type="date"
            class="form-control form-control-lg rounded-3"
            name="death.date"
            required
            style="background: #fafafa;"
          />
        </div>
        <div class="col-md-6">
          <label
            class="form-label fw-semibold"
            style="color: #4f0e21;"
          >Cidade</label>
          <input
            type="text"
            class="form-control form-control-lg rounded-3"
            name="death.city"
            style="background: #fafafa;"
          />
        </div>
        <div class="col-md-6">
          <label
            class="form-label fw-semibold"
            style="color: #4f0e21;"
          >Estado</label>
          <input
            type="text"
            class="form-control form-control-lg rounded-3"
            name="death.state"
            style="background: #fafafa;"
          />
        </div>
        <div class="col-md-6">
          <label
            class="form-label fw-semibold"
            style="color: #4f0e21;"
          >País</label>
          <input
            type="text"
            class="form-control form-control-lg rounded-3"
            name="death.country"
            style="background: #fafafa;"
          />
        </div>
      </div>

      <!-- Botão -->
      <div class="d-flex justify-content-center mt-5">
        <button
          type="submit"
          class="btn-default-main fw-bold px-5 py-3 rounded-pill shadow-sm"
        >
          Avançar
        </button>
      </div>

    </form>
  </div>

</main>