<main>
    <div class="custom-box p-4 my-2 mx-0">
        <h3 class="mb-4">Trocar o Tema do Memorial</h3>

        <form action="/memorial/{{slug}}/theme/update" method="POST">
            <!-- Cabe√ßalho -->
            <div class="mb-4 pb-3 border-bottom">
                <h3 class="fw-bold mb-1">
                    üïäÔ∏è {{firstName}} {{lastName}}
                </h3>
                <p class="text-muted small">Escolha uma das cores abaixo para personalizar o visual do memorial.</p>
            </div>

            <!-- OP√á√ïES DE TEMA -->
            <div class="row g-4">
                <!-- Vinho (Padr√£o) -->
                <div class="col-md-4">
                    <label
                        class="theme-option-card w-100 p-0 border rounded overflow-hidden cursor-pointer position-relative d-block">
                        <input type="radio" name="theme" value="vinho" class="d-none" {{#ifEquals theme "vinho"
                            }}checked{{/ifEquals}}>
                        <div class="theme-preview" style="background-color: #4f0e21; height: 80px;"></div>
                        <div class="p-3 text-center border-top">
                            <span class="fw-bold text-uppercase small">Vinho</span>
                            <div class="theme-check-mark position-absolute top-0 end-0 p-2 d-none">
                                <i class="bi bi-check-circle-fill text-white fs-5"></i>
                            </div>
                        </div>
                    </label>
                </div>

                <!-- Roxo -->
                <div class="col-md-4">
                    <label
                        class="theme-option-card w-100 p-0 border rounded overflow-hidden cursor-pointer position-relative d-block">
                        <input type="radio" name="theme" value="roxo" class="d-none" {{#ifEquals theme "roxo"
                            }}checked{{/ifEquals}}>
                        <div class="theme-preview" style="background-color: #4a148c; height: 80px;"></div>
                        <div class="p-3 text-center border-top">
                            <span class="fw-bold text-uppercase small">Roxo</span>
                            <div class="theme-check-mark position-absolute top-0 end-0 p-2 d-none">
                                <i class="bi bi-check-circle-fill text-white fs-5"></i>
                            </div>
                        </div>
                    </label>
                </div>

                <!-- Azul -->
                <div class="col-md-4">
                    <label
                        class="theme-option-card w-100 p-0 border rounded overflow-hidden cursor-pointer position-relative d-block">
                        <input type="radio" name="theme" value="azul" class="d-none" {{#ifEquals theme "azul"
                            }}checked{{/ifEquals}}>
                        <div class="theme-preview" style="background-color: #0d47a1; height: 80px;"></div>
                        <div class="p-3 text-center border-top">
                            <span class="fw-bold text-uppercase small">Azul</span>
                            <div class="theme-check-mark position-absolute top-0 end-0 p-2 d-none">
                                <i class="bi bi-check-circle-fill text-white fs-5"></i>
                            </div>
                        </div>
                    </label>
                </div>
            </div>

            <!-- BOT√ïES -->
            <div class="d-flex justify-content-end gap-2 mt-5">
                <a href="/memorial/{{slug}}" class="btn btn-custom-outline rounded-pill px-4">
                    Cancelar
                </a>
                <button type="submit" class="btn btn-custom-outline rounded-pill px-4">
                    Salvar Tema
                </button>
            </div>
        </form>
    </div>
</main>
