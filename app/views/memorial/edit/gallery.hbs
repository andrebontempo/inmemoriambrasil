<main>
  <div class="custom-box p-3 my-2 mx-0">

    <div class="mb-4">
      <h3 class="section-title mb-0">
        <i class="bi bi-pencil-square me-2"></i>
        Editar Galeria
      </h3>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs fw-semibold" id="editGalleryTabs" role="tablist">
      <li class="nav-item">
        <a class="nav-link active text-dark" data-bs-toggle="tab" href="#fotos">沒ｷ Fotos</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-dark" data-bs-toggle="tab" href="#audios">沁ｧ ﾃ「dios</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-dark" data-bs-toggle="tab" href="#videos">沁ｬ Vﾃｭdeos</a>
      </li>
    </ul>

    <div class="tab-content mt-3">

      <!-- ============================ 沒ｸ FOTOS ============================ -->
      <div class="tab-pane fade show active" id="fotos">
        <form action="/memorial/{{slug}}/gallery/update/photo" method="POST" enctype="multipart/form-data"
          class="card p-4 border-0 shadow-sm rounded-4 mb-4 bg-white">
          <div class="mb-3">
            <label class="form-label fw-bold small text-uppercase text-muted">Selecionar Foto</label>
            <input type="file" name="file" accept="image/*" class="form-control bg-white" required>
          </div>
          <div class="mb-3">
            <label class="form-label fw-bold small text-uppercase text-muted">Legenda (Opcional)</label>
            <input type="text" name="caption" class="form-control bg-white" placeholder="Descreva esta foto...">
          </div>

          <div class="d-flex justify-content-end gap-2">
            <button type="submit" class="btn btn-custom-outline rounded-pill px-4">
              <i class="bi bi-cloud-upload me-2"></i>Enviar Foto
            </button>
          </div>
        </form>

        <h5 class="fw-bold mb-3"><i class="bi bi-images me-2"></i>Fotos da Galeria</h5>
        <div class="mt-2">
          {{#if gallery.photos.length}}
          <div class="list-group list-group-flush gap-3">
            {{#each gallery.photos}}
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white p-3">
              <div class="row g-3 align-items-center">
                <!-- Miniatura -->
                <div class="col-auto">
                  <div class="rounded-3 overflow-hidden shadow-sm d-flex justify-content-center"
                    style="width: 80px; height: 80px;">
                    <img src="{{this.url}}" class="w-100 h-100 object-fit-cover" alt="Foto">
                  </div>
                </div>

                <!-- Formulﾃ｡rio e Aﾃｧﾃｵes -->
                <div class="col">
                  <div class="row g-2 align-items-end">
                    <div class="col-12 col-lg">
                      <form id="form-photo-{{@index}}" action="/memorial/{{../slug}}/gallery/caption/photo"
                        method="POST">
                        <input type="hidden" name="key" value="{{this.key}}">
                        <label class="small fw-bold text-muted text-uppercase mb-1">Legenda da Foto</label>
                        <input type="text" name="caption" class="form-control border-0 bg-white shadow-sm"
                          placeholder="Adicione uma legenda..." value="{{this.caption}}">
                      </form>
                    </div>
                    <div class="col-12 col-lg-auto d-flex gap-2">
                      <button type="submit" form="form-photo-{{@index}}"
                        class="btn btn-custom-outline rounded-pill px-3 flex-grow-1">
                        <i class="bi bi-check-lg me-1"></i>Salvar
                      </button>
                      <form action="/memorial/{{../slug}}/gallery/delete/photo" method="POST"
                        onsubmit="return confirm('Excluir esta foto?');" class="flex-grow-1">
                        <input type="hidden" name="key" value="{{this.key}}">
                        <button type="submit" class="btn btn-outline-danger rounded-pill px-3 w-100">
                          <i class="bi bi-trash3 me-1"></i>Excluir
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
          {{else}}
          <p class="text-muted text-center py-4 bg-white rounded-4 shadow-sm">Nenhuma foto disponﾃｭvel.</p>
          {{/if}}
        </div>
      </div>

      <!-- ============================ 沁ｧ ﾃゞDIOS ============================ -->
      <div class="tab-pane fade" id="audios">
        <form action="/memorial/{{slug}}/gallery/update/audio" method="POST" enctype="multipart/form-data"
          class="card p-4 border-0 shadow-sm rounded-4 mb-4 bg-white">
          <div class="mb-3">
            <label class="form-label fw-bold small text-uppercase text-muted">Selecionar ﾃ「dio</label>
            <input type="file" name="file" accept="audio/*" class="form-control bg-white" required>
          </div>
          <div class="mb-3">
            <label class="form-label fw-bold small text-uppercase text-muted">Legenda (Opcional)</label>
            <input type="text" name="caption" class="form-control bg-white" placeholder="Descreva este ﾃ｡udio...">
          </div>

          <div class="d-flex justify-content-end gap-2">
            <button type="submit" class="btn btn-custom-outline rounded-pill px-4">
              <i class="bi bi-mic-fill me-2"></i>Enviar ﾃ「dio
            </button>
          </div>
        </form>

        <h5 class="fw-bold mb-3"><i class="bi bi-mic-fill me-2"></i>ﾃ「dios da Galeria</h5>
        <div class="mt-2">
          {{#if gallery.audios.length}}
          <div class="list-group list-group-flush gap-3">
            {{#each gallery.audios}}
            <div class="card border-0 shadow-sm rounded-4 bg-white p-3">
              <div class="row g-3 align-items-center">
                <div class="col-12 col-md-5">
                  <audio controls class="w-100">
                    <source src="{{this.url}}" type="audio/mpeg">
                  </audio>
                </div>

                <div class="col">
                  <div class="row g-2 align-items-end">
                    <div class="col-12 col-lg">
                      <form id="form-audio-{{@index}}" action="/memorial/{{../slug}}/gallery/caption/audio"
                        method="POST">
                        <input type="hidden" name="key" value="{{this.key}}">
                        <label class="small fw-bold text-muted text-uppercase mb-1">Legenda do ﾃ「dio</label>
                        <input type="text" name="caption" class="form-control border-0 bg-white shadow-sm"
                          placeholder="Nome descritivo..." value="{{this.caption}}">
                      </form>
                    </div>
                    <div class="col-12 col-lg-auto d-flex gap-2">
                      <button type="submit" form="form-audio-{{@index}}"
                        class="btn btn-custom-outline rounded-pill px-3 flex-grow-1">
                        <i class="bi bi-check-lg me-1"></i>Salvar
                      </button>
                      <form action="/memorial/{{../slug}}/gallery/delete/audio" method="POST"
                        onsubmit="return confirm('Excluir este ﾃ｡udio?');" class="flex-grow-1">
                        <input type="hidden" name="key" value="{{this.key}}">
                        <button type="submit" class="btn btn-outline-danger rounded-pill px-3 w-100">
                          <i class="bi bi-trash3 me-1"></i>Excluir
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
          {{else}}
          <p class="text-muted text-center py-4 bg-white rounded-4 shadow-sm">Nenhum ﾃ｡udio disponﾃｭvel.</p>
          {{/if}}
        </div>
      </div>

      <!-- ============================ 沁ｬ Vﾃ好EOS ============================ -->
      <div class="tab-pane fade" id="videos">
        <form action="/memorial/{{slug}}/gallery/update/video" method="POST" enctype="multipart/form-data"
          class="card p-4 border-0 shadow-sm rounded-4 mb-4 bg-white">
          <div class="mb-3">
            <label class="form-label fw-bold small text-uppercase text-muted">Selecionar Vﾃｭdeo</label>
            <input type="file" name="file" accept="video/*" class="form-control bg-white" required>
          </div>
          <div class="mb-3">
            <label class="form-label fw-bold small text-uppercase text-muted">Legenda (Opcional)</label>
            <input type="text" name="caption" class="form-control bg-white" placeholder="Descreva este vﾃｭdeo...">
          </div>

          <div class="d-flex justify-content-end gap-2">
            <button type="submit" class="btn btn-custom-outline rounded-pill px-4">
              <i class="bi bi-play-btn-fill me-2"></i>Enviar Vﾃｭdeo
            </button>
          </div>
        </form>

        <h5 class="fw-bold mb-3"><i class="bi bi-play-btn-fill me-2"></i>Vﾃｭdeos da Galeria</h5>
        <div class="mt-2">
          {{#if gallery.videos.length}}
          <div class="list-group list-group-flush gap-3">
            {{#each gallery.videos}}
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white p-3">
              <div class="row g-3 align-items-center">
                <div class="col-12 col-md-4 col-xl-3">
                  <div class="ratio ratio-16x9 rounded-3 overflow-hidden shadow-sm bg-black">
                    <video controls>
                      <source src="{{this.url}}" type="video/mp4">
                    </video>
                  </div>
                </div>

                <div class="col">
                  <div class="row g-2 align-items-end">
                    <div class="col-12 col-lg">
                      <form id="form-video-{{@index}}" action="/memorial/{{../slug}}/gallery/caption/video"
                        method="POST">
                        <input type="hidden" name="key" value="{{this.key}}">
                        <label class="small fw-bold text-muted text-uppercase mb-1">Legenda do Vﾃｭdeo</label>
                        <input type="text" name="caption" class="form-control border-0 bg-white shadow-sm"
                          placeholder="Descreva o conteﾃｺdo..." value="{{this.caption}}">
                      </form>
                    </div>
                    <div class="col-12 col-lg-auto d-flex gap-2">
                      <button type="submit" form="form-video-{{@index}}"
                        class="btn btn-custom-outline rounded-pill px-3 flex-grow-1">
                        <i class="bi bi-check-lg me-1"></i>Salvar
                      </button>
                      <form action="/memorial/{{../slug}}/gallery/delete/video" method="POST"
                        onsubmit="return confirm('Excluir este vﾃｭdeo?');" class="flex-grow-1">
                        <input type="hidden" name="key" value="{{this.key}}">
                        <button type="submit" class="btn btn-outline-danger rounded-pill px-3 w-100">
                          <i class="bi bi-trash3 me-1"></i>Excluir
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
          {{else}}
          <p class="text-muted text-center py-4 bg-white rounded-4 shadow-sm">Nenhum vﾃｭdeo disponﾃｭvel.</p>
          {{/if}}
        </div>
      </div>

    </div>

    <div class="d-flex justify-content-center mt-5 mb-3">
      <a href="/memorial/{{slug}}/gallery" class="btn btn-custom-outline rounded-pill px-5 py-2 fw-bold shadow">
        <i class="bi bi-arrow-clockwise me-2"></i>Finalizar e Atualizar Galeria
      </a>
    </div>

  </div>
</main>