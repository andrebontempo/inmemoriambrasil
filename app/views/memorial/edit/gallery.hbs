<main class="container my-4">
  <div class="custom-card border-0 shadow-sm rounded-4 p-4 bg-white">

    <!-- Header da Pﾃ｡gina -->
    <div class="d-flex align-items-center justify-content-between mb-4 pb-3 border-bottom">
      <h3 class="fw-bold mb-0">
        <i class="bi bi-pencil-square me-2 text-primary"></i>
        Editar Galeria
      </h3>
      <a href="/memorial/{{slug}}/gallery" class="btn btn-outline-dark rounded-pill px-4 btn-sm">
        <i class="bi bi-eye me-2"></i>Ver Galeria Pﾃｺblica
      </a>
    </div>

    <!-- Tabs Profissionais (Igual ﾃ Galeria Pﾃｺblica) -->
    <ul class="nav nav-tabs fw-semibold mb-4 mx-auto" id="editGalleryTabs" role="tablist"
      style="max-width: fit-content;">
      <li class="nav-item" role="presentation">
        <button class="nav-link active text-dark px-4" id="fotos-tab" data-bs-toggle="tab" data-bs-target="#fotos"
          type="button" role="tab" aria-controls="fotos" aria-selected="true">
          沒ｷ Fotos
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link text-dark px-4" id="audios-tab" data-bs-toggle="tab" data-bs-target="#audios"
          type="button" role="tab" aria-controls="audios" aria-selected="false">
          沁ｧ ﾃ「dios
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link text-dark px-4" id="videos-tab" data-bs-toggle="tab" data-bs-target="#videos"
          type="button" role="tab" aria-controls="videos" aria-selected="false">
          沁ｬ Vﾃｭdeos
        </button>
      </li>
    </ul>

    <form id="gallery-bulk-form" action="/memorial/{{slug}}/gallery/save-all" method="POST">
      <div class="tab-content pt-2">

        <!-- ============================ 沒ｸ FOTOS ============================ -->
        <div class="tab-pane fade show active" id="fotos" role="tabpanel" aria-labelledby="fotos-tab">

          <!-- Grid de Fotos -->
          <h5 class="fw-bold mb-4 d-flex align-items-center">
            <i class="bi bi-images me-2 text-primary"></i>
            Suas Fotos
            <span class="badge bg-light text-dark ms-2 rounded-pill fw-normal">{{gallery.photos.length}}</span>
          </h5>

          {{#if gallery.photos.length}}
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            {{#each gallery.photos}}
            <div class="col">
              <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden bg-white border-hover">
                <div class="ratio ratio-4x3 bg-light d-flex align-items-center justify-content-center overflow-hidden">
                  <img src="{{this.url}}" class="img-fluid object-fit-cover w-100 h-100" alt="Galeria">
                </div>
                <div class="card-body p-3">
                  <div class="input-group input-group-sm">
                    <span class="input-group-text bg-transparent border-0 text-muted ps-0"><i
                        class="bi bi-pencil small"></i></span>
                    <input type="text" name="captions[{{this.key}}]"
                      class="form-control border-0 bg-light rounded-pill ps-3" placeholder="Sem legenda..."
                      value="{{this.caption}}">
                  </div>
                  <div class="mt-3 text-center">
                    <button type="button" class="btn btn-outline-danger btn-sm rounded-pill px-3 w-100"
                      onclick="if(confirm('Excluir esta foto?')) { deleteMedia('photo', '{{this.key}}') }">
                      <i class="bi bi-trash3 me-1"></i>Excluir
                    </button>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
          {{else}}
          <div class="text-center py-5 bg-light rounded-4">
            <i class="bi bi-image text-muted fs-1 mb-2"></i>
            <p class="text-muted mb-0">Nenhuma foto enviada ainda.</p>
          </div>
          {{/if}}
        </div>

        <!-- ============================ 沁ｧ ﾃゞDIOS ============================ -->
        <div class="tab-pane fade" id="audios" role="tabpanel" aria-labelledby="audios-tab">

          <!-- Lista de ﾃ「dios -->
          <h5 class="fw-bold mb-4"><i class="bi bi-mic-fill me-2 text-primary"></i>Seus ﾃ「dios</h5>

          {{#if gallery.audios.length}}
          <div class="row row-cols-1 g-3">
            {{#each gallery.audios}}
            <div class="col">
              <div class="card border-0 shadow-sm rounded-4 p-3 bg-white border-hover">
                <div class="row align-items-center g-3">
                  <div class="col-md-4">
                    <audio controls class="w-100">
                      <source src="{{this.url}}" type="audio/mpeg">
                    </audio>
                  </div>
                  <div class="col-md-6">
                    <div class="input-group">
                      <span class="input-group-text bg-transparent border-0 text-muted"><i
                          class="bi bi-pencil-fill small"></i></span>
                      <input type="text" name="captions[{{this.key}}]"
                        class="form-control border-0 bg-light rounded-pill ps-3" placeholder="Nome do ﾃ｡udio..."
                        value="{{this.caption}}">
                    </div>
                  </div>
                  <div class="col-md-2 text-end">
                    <button type="button" class="btn btn-outline-danger btn-sm rounded-pill px-3"
                      onclick="if(confirm('Excluir este ﾃ｡udio?')) { deleteMedia('audio', '{{this.key}}') }">
                      <i class="bi bi-trash3 me-1"></i>Excluir
                    </button>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
          {{else}}
          <div class="text-center py-5 bg-light rounded-4">
            <i class="bi bi-mic text-muted fs-1 mb-2"></i>
            <p class="text-muted mb-0">Nenhum ﾃ｡udio disponﾃｭvel.</p>
          </div>
          {{/if}}
        </div>

        <!-- ============================ 沁ｬ Vﾃ好EOS ============================ -->
        <div class="tab-pane fade" id="videos" role="tabpanel" aria-labelledby="videos-tab">

          <!-- Grid de Vﾃｭdeos -->
          <h5 class="fw-bold mb-4"><i class="bi bi-play-btn-fill me-2 text-primary"></i>Seus Vﾃｭdeos</h5>

          {{#if gallery.videos.length}}
          <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {{#each gallery.videos}}
            <div class="col">
              <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden bg-white border-hover">
                <div class="ratio ratio-16x9 bg-black position-relative">
                  <video src="{{this.url}}" class="w-100 h-100" muted></video>
                  <div
                    class="position-absolute top-50 start-50 translate-middle pointer-none shadow-lg rounded-circle p-2 bg-white bg-opacity-25 border border-white">
                    <i class="bi bi-play-fill text-white fs-4"></i>
                  </div>
                </div>
                <div class="card-body p-3">
                  <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text bg-transparent border-0 text-muted ps-0"><i
                        class="bi bi-pencil small"></i></span>
                    <input type="text" name="captions[{{this.key}}]"
                      class="form-control border-0 bg-light rounded-pill ps-3" placeholder="Sem legenda..."
                      value="{{this.caption}}">
                  </div>
                  <div class="text-center">
                    <button type="button" class="btn btn-outline-danger btn-sm rounded-pill px-4 w-100"
                      onclick="if(confirm('Excluir este vﾃｭdeo?')) { deleteMedia('video', '{{this.key}}') }">
                      <i class="bi bi-trash3 me-1"></i>Excluir
                    </button>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
          {{else}}
          <div class="text-center py-5 bg-light rounded-4">
            <i class="bi bi-camera-video text-muted fs-1 mb-2"></i>
            <p class="text-muted mb-0">Nenhum vﾃｭdeo disponﾃｭvel.</p>
          </div>
          {{/if}}
        </div>
      </div>

      <!-- Rodapﾃｩ de Aﾃｧﾃ｣o -->
      <div class="text-center mt-5 pt-4 border-top">
        <p class="text-muted small mb-4 italic text-justify">
          <i class="bi bi-info-circle me-1"></i> Todas as legendas serﾃ｣o salvas automaticamente ao clicar no botﾃ｣o de
          concluir abaixo.
        </p>
        <button type="submit" class="btn btn-custom-fill rounded-pill px-5 btn-lg shadow-lg">
          <i class="bi bi-check2-circle me-2"></i>Salvar e Concluir Ediﾃｧﾃ｣o
        </button>
      </div>
    </form>

    <!-- Upload Section em Separado (para nﾃ｣o interferir no form global) -->
    <div class="mt-5 pt-5 border-top">
      <h4 class="fw-bold mb-4 text-center">Adicionar Novo Arquivo</h4>

      <div class="row g-4 d-flex justify-content-center">
        <!-- Foto -->
        <div class="col-md-4">
          <div class="card border-0 shadow-sm rounded-4 p-4 h-100 bg-light">
            <h6 class="fw-bold mb-3"><i class="bi bi-image me-2 text-primary"></i>Nova Foto</h6>
            <form action="/memorial/{{slug}}/gallery/update/photo" method="POST" enctype="multipart/form-data">
              <input type="file" name="file" accept="image/*" class="form-control btn-sm mb-2 shadow-none border-0"
                required>
              <input type="text" name="caption" class="form-control btn-sm mb-3 shadow-none border-0"
                placeholder="Legenda...">
              <button type="submit" class="btn btn-custom-outline w-100 rounded-pill btn-sm">Enviar Foto</button>
            </form>
          </div>
        </div>
        <!-- ﾃ「dio -->
        <div class="col-md-4">
          <div class="card border-0 shadow-sm rounded-4 p-4 h-100 bg-light">
            <h6 class="fw-bold mb-3"><i class="bi bi-mic me-2 text-primary"></i>Novo ﾃ「dio</h6>
            <form action="/memorial/{{slug}}/gallery/update/audio" method="POST" enctype="multipart/form-data">
              <input type="file" name="file" accept="audio/*" class="form-control btn-sm mb-2 shadow-none border-0"
                required>
              <input type="text" name="caption" class="form-control btn-sm mb-3 shadow-none border-0"
                placeholder="Legenda...">
              <button type="submit" class="btn btn-custom-outline w-100 rounded-pill btn-sm">Enviar ﾃ「dio</button>
            </form>
          </div>
        </div>
        <!-- Vﾃｭdeo -->
        <div class="col-md-4">
          <div class="card border-0 shadow-sm rounded-4 p-4 h-100 bg-light">
            <h6 class="fw-bold mb-3"><i class="bi bi-play-circle me-2 text-primary"></i>Novo Vﾃｭdeo</h6>
            <form action="/memorial/{{slug}}/gallery/update/video" method="POST" enctype="multipart/form-data">
              <input type="file" name="file" accept="video/*" class="form-control btn-sm mb-2 shadow-none border-0"
                required>
              <input type="text" name="caption" class="form-control btn-sm mb-3 shadow-none border-0"
                placeholder="Legenda...">
              <button type="submit" class="btn btn-custom-outline w-100 rounded-pill btn-sm">Enviar Vﾃｭdeo</button>
            </form>
          </div>
        </div>
      </div>
    </div>

  </div>
</main>

<!-- Formulﾃ｡rio Oculto para Deleﾃｧﾃ｣o -->
<form id="delete-form" action="" method="POST" style="display: none;">
  <input type="hidden" name="key" id="delete-key">
</form>

<script>
  function deleteMedia(tipo, key) {
    const form = document.getElementById('delete-form');
    form.action = `/memorial/{{slug}}/gallery/delete/${tipo}`;
    document.getElementById('delete-key').value = key;
    form.submit();
  }
</script>

