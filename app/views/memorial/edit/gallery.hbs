<main>
  <div class="custom-box p-3 my-2 mx-0">

    <h3 class="mb-4">
      <i class="bi bi-pencil-square me-2"></i>
      Editar Galeria de Fotos, √Åudios e V√≠deos
    </h3>

    <!-- Tabs -->
    <ul class="nav nav-tabs fw-semibold" id="editGalleryTabs" role="tablist">
      <li class="nav-item">
        <a class="nav-link active text-dark" data-bs-toggle="tab" href="#fotos">üì∑ Fotos</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-dark" data-bs-toggle="tab" href="#audios">üéß √Åudios</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-dark" data-bs-toggle="tab" href="#videos">üé¨ V√≠deos</a>
      </li>
    </ul>

    <div class="tab-content mt-3">

      <!-- üì∑ FOTOS -->
      <div class="tab-pane fade show active" id="fotos">
        <form
          action="/memorial/{{slug}}/gallery/update/photo"
          method="POST"
          enctype="multipart/form-data"
          class="card p-3"
        >
          <input type="file" name="file" accept="image/*" class="form-control mb-3" required>

          <input type="hidden" name="slug" value="{{slug}}">
          <input type="hidden" name="memorialId" value="{{memorialId}}">
          <input type="hidden" name="userId" value="{{userId}}">

          <div class="d-flex justify-content-end gap-2">
            <a href="/memorial/{{slug}}/gallery" class="btn-default-memorial">
              Cancelar
            </a>
            <button type="submit" class="btn-default-memorial">
              Enviar
            </button>
          </div>
        </form>

        <div class="row gallery-grid mt-3">
          {{#if gallery.photos.length}}
            {{#each gallery.photos}}
              <div class="col-sm-6 col-md-4 col-lg-3 mb-4 position-relative">

                <a href="{{this.url}}" target="_blank">
                  <img src="{{this.url}}" class="edit-galeria-foto rounded shadow-sm img-fluid" alt="Foto do memorial {{../slug}}">
                </a>

                <form
                  action="/memorial/{{../slug}}/gallery/delete/photo"
                  method="POST"
                  class="delete-form"
                >
                  <input type="hidden" name="key" value="{{this.key}}">
                  <button type="submit" class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1 shadow-sm">
                    <i class="bi bi-trash-fill"></i>
                  </button>
                </form>

              </div>
            {{/each}}
          {{else}}
            <p class="text-muted">Nenhuma foto dispon√≠vel.</p>
          {{/if}}
        </div>
      </div>

      <!-- üéß √ÅUDIOS -->
      <div class="tab-pane fade" id="audios">
        <form
          action="/memorial/{{slug}}/gallery/update/audio"
          method="POST"
          enctype="multipart/form-data"
          class="card p-3"
        >
          <input type="file" name="file" accept="audio/*" class="form-control mb-3" required>

          <input type="hidden" name="slug" value="{{slug}}">
          <input type="hidden" name="memorialId" value="{{memorialId}}">
          <input type="hidden" name="userId" value="{{userId}}">

          <div class="d-flex justify-content-end gap-2">
            <a href="/memorial/{{slug}}/gallery" class="btn btn-outline-secondary px-4">
              Cancelar
            </a>
            <button type="submit" class="btn btn-primary px-4">
              Enviar
            </button>
          </div>
        </form>

        <div class="row mt-3">
          {{#if gallery.audios.length}}
            {{#each gallery.audios}}
              <div class="col-md-6 mb-3 position-relative">

                <audio controls class="media-player w-100 border rounded shadow-sm p-2">
                  <source src="{{this.url}}" type="audio/mpeg">
                </audio>

                <form
                  action="/memorial/{{../slug}}/gallery/delete/audio"
                  method="POST"
                  class="delete-form"
                >
                  <input type="hidden" name="key" value="{{this.key}}">
                  <button type="submit" class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1 shadow-sm">
                    <i class="bi bi-trash-fill"></i>
                  </button>
                </form>

              </div>
            {{/each}}
          {{else}}
            <p class="text-muted">Nenhum √°udio dispon√≠vel.</p>
          {{/if}}
        </div>
      </div>

      <!-- üé¨ V√çDEOS -->
      <div class="tab-pane fade" id="videos">
        <form
          action="/memorial/{{slug}}/gallery/update/video"
          method="POST"
          enctype="multipart/form-data"
          class="card p-3"
        >
          <input type="file" name="file" accept="video/*" class="form-control mb-3" required>

          <input type="hidden" name="slug" value="{{slug}}">
          <input type="hidden" name="memorialId" value="{{memorialId}}">
          <input type="hidden" name="userId" value="{{userId}}">

          <div class="d-flex justify-content-end gap-2">
            <a href="/memorial/{{slug}}/gallery" class="btn btn-outline-secondary px-4">
              Cancelar
            </a>
            <button type="submit" class="btn btn-primary px-4">
              Enviar
            </button>
          </div>
        </form>

        <div class="row mt-3">
          {{#if gallery.videos.length}}
            {{#each gallery.videos}}
              <div class="col-md-6 mb-4 position-relative">

                <video controls class="media-player w-100 rounded shadow-sm">
                  <source src="{{this.url}}" type="video/mp4">
                </video>

                <form
                  action="/memorial/{{../slug}}/gallery/delete/video"
                  method="POST"
                  class="delete-form"
                >
                  <input type="hidden" name="key" value="{{this.key}}">
                  <button type="submit" class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1 shadow-sm">
                    <i class="bi bi-trash-fill"></i>
                  </button>
                </form>

              </div>
            {{/each}}
          {{else}}
            <p class="text-muted">Nenhum v√≠deo dispon√≠vel.</p>
          {{/if}}
        </div>
      </div>

    </div>
  </div>
</main>
