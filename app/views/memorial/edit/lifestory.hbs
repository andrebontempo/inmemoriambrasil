<main>
  <!-- Caixa principal com fundo vinho claro -->
  <div class="custom-box my-2 mx-0" style="background: #f7eaed;">

    <form
      action="/memorial/{{slug}}/lifestory/update/{{lifeStory._id}}"
      method="POST"
      enctype="multipart/form-data"
    >
      <input type="hidden" name="_method" value="PUT" />
      <input type="hidden" name="memorial" value="{{lifeStory.memorial}}" />
      <input type="hidden" name="slug" value="{{slug}}" />

      <!-- Título -->
      <div class="custom-box my-2 mx-0">
        <h3><i class="bi bi-pencil-square me-2"></i> Editar História</h3>

        <div class="card p-3">

          <!-- Título -->
          <div class="mb-2">
            <label for="storyTitle" class="form-label">
              <i class="bi bi-bookmark-fill me-1"></i>
              Título da História
            </label>
            <input
              type="text"
              class="form-control"
              id="storyTitle"
              name="title"
              value="{{lifeStory.title}}"
              required
            />
          </div>

          <!-- Conteúdo -->
          <div class="mb-2">
            <label for="storyContent" class="form-label">
              <i class="bi bi-chat-left-text me-1"></i>
              Conteúdo
            </label>
            <textarea
              class="edit-input form-control"
              rows="5"
              id="storyContent"
              name="content"
              required
            >{{lifeStory.content}}</textarea>
          </div>

          <!-- Data -->
          <div class="mb-2">
            <label for="eventDate" class="form-label">
              <i class="bi bi-calendar-event me-1"></i>
              Data do Acontecimento
            </label>
            <input
              type="date"
              class="form-control"
              id="eventDate"
              name="eventDate"
              value="{{eventDate}}"
            />
          </div>

          <!-- Imagem -->
          <div class="mb-2">
            <label for="storyImage" class="form-label">
              <i class="bi bi-image me-1"></i>
              Substituir imagem
            </label>
            <input
              type="file"
              class="form-control"
              id="storyImage"
              name="file"
              accept="image/*"
            />

            {{#if lifeStory.image.url}}
              <div class="mt-2">
                <strong>Imagem atual:</strong><br />
                <img
                  src="{{lifeStory.image.url}}"
                  class="rounded custom-story-img"
                  alt="Imagem da história"
                />
              </div>
            {{/if}}
          </div>

          <div class="text-muted mb-2 fs-7 text-end">
            Editando como usuário logado.
          </div>

          <!-- Botões -->
          <div class="d-flex justify-content-end align-items-center gap-2">
            <a href="/memorial/{{slug}}/lifestory" class="life-mini-btn">
              <i class="bi bi-x-circle"></i>
              Cancelar
            </a>

            <button type="submit" class="life-mini-btn">
              <i class="bi bi-check2-circle"></i>
              Atualizar
            </button>
          </div>

        </div>
      </div>
    </form>

  </div>
</main>