<main>

  <!-- Cabeçalho de Homenagens -->
  <div class="custom-box my-2 mx-0">
    <h3 class="section-title">
      <i class="bi bi-journal-bookmark me-2"></i>
      Página de Homenagens
    </h3>
    <p class="section-text">
      Neste espaço do memorial o visitante é convidado a deixar sua homenagem para <strong>{{firstName}}
        {{lastName}}</strong>
      em forma de mensagem que ficará gravada para sempre aqui.
    </p>
    <div class="text-center">
      <a href="#form-tributo" class="btn btn-custom-outline rounded-pill px-4">
        <i class="bi bi-pencil-square me-2"></i> Escrever Homenagem
      </a>
    </div>
  </div>

  <!-- Lista de Homenagens -->
  <div class="custom-box my-2 mx-0 text-start">
    {{#if tribute.length}}
    {{#each tribute}}
    <div class="col-12 mb-4">
      <div class="card tribute-card">
        <div class="card-body p-0">
          <div class="tribute-body">

            <!-- Ícone Representativo -->
            <div class="tribute-image-box">
              <div class="tribute-icon-container">
                <img src="/css/memorial/files/{{#if this.type}}{{this.type}}{{else}}tributo_caneta.png{{/if}}"
                  alt="Ícone de Tributo">
              </div>
            </div>

            <!-- Mensagem e Rodapé -->
            <div class="tribute-content">
              <div class="mb-3">
                <p class="message-text mb-0">"{{this.message}}"</p>
              </div>

              <div class="tribute-footer">
                <small class="tribute-author text-muted">
                  Por <strong>{{this.user.firstName}} {{this.user.lastName}}</strong><br>
                  Em <i class="bi bi-calendar3 ms-2 me-1"></i> {{formatDateTribute this.createdAt "default"}}
                </small>

                <div class="tribute-actions">
                  <a href="/memorial/{{../slug}}/tribute/edit/{{this._id}}"
                    class="btn btn-custom-outline btn-sm rounded-pill px-3">
                    Editar
                  </a>

                  <form action="/memorial/{{../slug}}/tribute/delete/{{this._id}}" method="POST"
                    onsubmit="return confirm('Tem certeza que deseja apagar este tributo?');" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3">
                      Excluir
                    </button>
                  </form>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
    {{/each}}
    {{else}}
    <div class="col-12">
      <div class="card border-0 shadow-sm rounded-4 text-center py-5">
        <div class="card-body">
          <i class="bi bi-chat-dots fs-1 text-muted mb-3 d-block"></i>
          <p class="text-muted fs-5 mb-0">Nenhuma homenagem adicionada ainda. Seja o primeiro a homenagear!</p>
        </div>
      </div>
    </div>
    {{/if}}
  </div>

  <!-- Formulário de Envio (Card Separado) -->
  <div id="form-tributo" class="mt-2">
    <form action="/memorial/{{slug}}/tribute/create" method="POST">
      <input type="hidden" name="memorial" value="{{id}}">
      <input type="hidden" name="slug" value="{{slug}}">

      <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-4 p-md-5">

          <h3 class="section-title text-center">
            <i class="bi bi-pencil-square me-2"></i>Escrever Homenagem
          </h3>

          <!-- Seleção Visual de Ícones -->
          <div class="text-center mb-4">
            <p class="text-muted mb-3 small fw-bold text-uppercase">Escolha um ícone para sua homenagem:</p>
            <div class="d-flex justify-content-center flex-wrap gap-4">

              <label class="tribute-option">
                <input type="radio" name="type" value="tributo_caneta.png" checked>
                <div class="tribute-icon-btn shadow-sm">
                  <img src="/css/memorial/files/tributo_caneta.png" alt="Mensagem" class="tribute-icon-img">
                  <span class="d-block small mt-1">Mensagem</span>
                </div>
              </label>

              <label class="tribute-option">
                <input type="radio" name="type" value="tributo_flor.png">
                <div class="tribute-icon-btn shadow-sm">
                  <img src="/css/memorial/files/tributo_flor.png" alt="Flor" class="tribute-icon-img">
                  <span class="d-block small mt-1">Flor</span>
                </div>
              </label>

              <label class="tribute-option">
                <input type="radio" name="type" value="tributo_vela.png">
                <div class="tribute-icon-btn shadow-sm">
                  <img src="/css/memorial/files/tributo_vela.png" alt="Vela" class="tribute-icon-img">
                  <span class="d-block small mt-1">Vela</span>
                </div>
              </label>

            </div>
          </div>

          <div class="mb-4">
            <textarea class="form-control form-control-lg border-2 shadow-none rounded-4" rows="6"
              placeholder="Escreva sua mensagem com carinho..." name="message" required
              style="border-color: #eee;"></textarea>
          </div>

          <div class="text-center">
            <button type="submit" class="btn btn-custom-outline rounded-pill px-5 shadow-sm">
              <i class="bi bi-send-fill me-2"></i>Enviar
            </button>
          </div>

        </div>
      </div>
    </form>
  </div>

</main>