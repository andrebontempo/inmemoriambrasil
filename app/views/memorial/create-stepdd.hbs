<main class="container my-5">

  <!-- WRAPPER CENTRALIZADO -->
  <div class="d-flex justify-content-center">
    {{#if user}}
    <form action="/memorial/create-step1" method="POST"
      class="main-form main-form-box main-card p-4 rounded-4 shadow-sm w-90" style="max-width: 650px;">

      <h2 class="main-title text-center mb-4 fw-bold">
        Nome do Homenageado (1/4)
      </h2>

      {{#if error}}
      <div class="alert alert-danger text-center">{{error}}</div>
      {{/if}}

      <!-- PRIMEIRO NOME -->
      <div class="mb-4">
        <label for="firstName" class="form-label fw-bold">Primeiro Nome</label>
        <input type="text" class="form-control" id="firstName" name="firstName" required pattern="[A-Za-zÀ-ú\s]+"
          autocomplete="given-name" value="{{firstName}}" />
      </div>

      <!-- SOBRENOME -->
      <div class="mb-4">
        <label for="lastName" class="form-label fw-bold">Sobrenome</label>
        <input type="text" class="form-control" id="lastName" name="lastName" required pattern="[A-Za-zÀ-ú\s]+"
          autocomplete="family-name" value="{{lastName}}" />
      </div>

      <!-- BOTÃO -->
      <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary btn-lg px-4 rounded-pill">
          Começar
        </button>
      </div>

    </form>
    {{else}}
    <div class="card border-0 shadow-sm rounded-4 text-center py-5 px-4" style="max-width: 600px; width: 100%;">
      <div class="card-body">
        <i class="bi bi-person-lock fs-1 text-muted mb-3 d-block"></i>
        <h4 class="mb-3 fw-bold">Faça login para criar um memorial</h4>
        <p class="text-muted mb-4">Você precisa estar conectado para começar a eternizar a história de quem você ama.
        </p>
        <div class="d-flex justify-content-center gap-2">
          <a href="/auth/login" class="btn btn-primary rounded-pill px-4">Entrar</a>
          <a href="/auth/register" class="btn btn-outline-dark rounded-pill px-4">Criar conta</a>
        </div>
      </div>
    </div>
    {{/if}}
  </div>

</main>