<main class="container my-5">

  <div
    class="p-4 p-md-5 rounded-4 shadow-lg"
    style="background: #fff; border: 1px solid #eee;"
  >

    <h2 class="text-center mb-4 fw-bold" style="color: #4f0e21;">
      Etapa 3: Escolha do Plano
    </h2>

    <form
      action="/memorial/create-step3"
      method="POST"
      class="mx-auto"
      style="max-width: 600px;"
    >

      <!-- Plano Gratuito -->
      <label for="planoGratuito" class="w-100">
        <div
          class="card shadow-sm mb-4 border-0 rounded-4 p-3"
          style="cursor: pointer; transition: 0.3s;"
        >
          <div class="d-flex align-items-start">
            <input
              class="form-check-input mt-1 me-3"
              type="radio"
              name="plan"
              id="planoGratuito"
              value="free"
              required
            />
            <div>
              <h5 class="fw-bold" style="color: #4f0e21;">Plano Gratuito</h5>
              <p class="mb-0 text-muted">
                Memorial com recursos básicos e permanência limitada.
              </p>
            </div>
          </div>
        </div>
      </label>

      <!-- Plano Premium -->
      <label for="planoPago" class="w-100">
        <div
          class="card shadow-sm mb-4 border-0 rounded-4 p-3"
          style="cursor: pointer; transition: 0.3s;"
        >
          <div class="d-flex align-items-start">
            <input
              class="form-check-input mt-1 me-3"
              type="radio"
              name="plan"
              id="planoPago"
              value="premium"
            />
            <div>
              <h5 class="fw-bold" style="color: #4f0e21;">Plano Premium (pago)</h5>
              <p class="mb-0 text-muted">
                Memorial com recursos avançados, personalização completa e sem
                limite de tempo.
              </p>
            </div>
          </div>
        </div>
      </label>

      <!-- Botão -->
      <div class="d-flex justify-content-center mt-4">
        <button
          type="submit"
          class="btn fw-bold px-5 py-3 rounded-pill shadow-sm"
          style="background-color: #4f0e21; color: #fff;"
        >
          Avançar
        </button>
      </div>

    </form>
  </div>

</main>