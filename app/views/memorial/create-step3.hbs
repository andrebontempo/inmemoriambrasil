<main class="container my-5">

  <!-- WRAPPER CENTRALIZADO -->
  <div class="d-flex justify-content-center">
    <form
      action="/memorial/create-step3"
      method="POST"
      class="main-form main-form-box main-card p-4 rounded-4 shadow-sm"
    >

      <h2 class="main-title text-center mb-4 fw-bold">
        Escolha do Plano(3/4)
      </h2>

      <!-- Plano Gratuito -->
      <label for="planoGratuito" class="w-100 mb-4">
        <div
          class="card shadow-sm border-0 rounded-4 p-3"
          style="cursor: pointer;"
        >
          <div class="d-flex align-items-start">
            <input
              class="form-check-input mt-1 me-3"
              type="radio"
              name="plan"
              id="planoGratuito"
              value="free"
              required
            />
            <div>
              <h5 class="fw-bold text-primary">Plano Gratuito</h5>
              <p class="text-muted mb-0">
                Memorial com recursos básicos e permanência limitada.
              </p>
            </div>
          </div>
        </div>
      </label>

      <!-- Plano Premium -->
      <label for="planoPremium" class="w-100 mb-4">
        <div
          class="card shadow-sm border-0 rounded-4 p-3"
          style="cursor: pointer;"
        >
          <div class="d-flex align-items-start">
            <input
              class="form-check-input mt-1 me-3"
              type="radio"
              name="plan"
              id="planoPremium"
              value="premium"
            />
            <div>
              <h5 class="fw-bold text-primary">Plano Premium (pago)</h5>
              <p class="text-muted mb-0">
                Memorial com recursos avançados, personalização completa e sem
                limite de tempo.
              </p>
            </div>
          </div>
        </div>
      </label>

      <!-- Botão -->
      <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary btn-lg px-5">
          Avançar
        </button>
      </div>

    </form>
  </div>

</main>