<main class="container my-5">
  <div
    class="p-5 rounded-4 shadow-lg text-white"
    style="background-color: #4f0e21;"
  >
    <h2 class="text-center mb-4 fw-bold">Etapa 1: Nome do Homenageado</h2>
    {{#if error}}
      <div class="alert alert-danger">{{error}}</div>
    {{/if}}
    <form
      action="/memorial/create-step1"
      method="POST"
      class="mx-auto"
      style="max-width: 80%;"
    >
      <div class="row g-3">
        <div class="col-md-6">
          <label for="firstName" class="form-label">Primeiro Nome:</label>
          <input
            type="text"
            class="form-control"
            id="firstName"
            name="firstName"
            required
            pattern="[A-Za-zÀ-ú\s]+"
            title="Somente letras são permitidas"
            autocomplete="given-name"
            value="{{firstName}}"
          />
        </div>
        <div class="col-md-6">
          <label for="lastName" class="form-label">Sobrenome:</label>
          <input
            type="text"
            class="form-control"
            id="lastName"
            name="lastName"
            required
            pattern="[A-Za-zÀ-ú\s]+"
            title="Somente letras são permitidas"
            autocomplete="family-name"
            value="{{lastName}}"
          />
        </div>
      </div>
      <div class="d-flex justify-content-end mt-4">
        <button
          type="submit"
          class="btn btn-light fw-bold px-5 py-3 rounded-pill shadow"
          style="background-color: #ffffff; color: #4f0e21;"
        >
          Próxima Etapa
        </button>
      </div>
    </form>
  </div>
</main>