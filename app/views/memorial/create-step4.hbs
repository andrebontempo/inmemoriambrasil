<main class="container my-5">

  <!-- WRAPPER CENTRALIZADO -->
  <div class="d-flex justify-content-center">
    <form action="/memorial/create-step4" method="POST" enctype="multipart/form-data"
      class="main-form main-form-box main-card p-4 rounded-4 shadow-sm w-100" style="max-width: 750px;">

      <h2 class="main-title text-center mb-4 fw-bold">
        Foto &amp; Epitáfio(4/4)
      </h2>

      <input type="hidden" name="slug" value="{{slug}}" />

      <!-- Foto de capa -->
      <div class="mb-4">
        <label for="coverPhoto" class="form-label fw-semibold main-label">
          Foto Principal
        </label>
        <input type="file" name="file" id="coverPhoto" class="form-control form-control-lg rounded-3 main-input"
          accept="image/*" required />
        <div class="form-text">Envie uma imagem para destacar o memorial.</div>
      </div>

      <!-- Epitáfio -->
      <div class="mb-4">
        <label for="epitaph" class="form-label fw-semibold main-label">
          Epitáfio
        </label>
        <input type="text" name="epitaph" id="epitaph" class="form-control form-control-lg rounded-3 main-input"
          maxlength="120" required />
        <div class="form-text">Frase que será exibida no topo do memorial.</div>
      </div>

