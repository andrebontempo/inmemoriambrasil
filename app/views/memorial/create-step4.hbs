<main class="container my-5">
  <div
    class="p-5 rounded-4 shadow-lg text-white"
    style="background-color: #4f0e21;"
  >
    <h2 class="text-center mb-4 fw-bold">Etapa 4: Personalização Final</h2>

    <form
      action="/memorial/create-step4"
      method="POST"
      enctype="multipart/form-data"
      class="mx-auto"
      style="max-width: 60%;"
    >
      <input type="hidden" name="slug" value="{{slug}}" />
      <!-- Upload da foto de capa -->
      <div class="mb-4">
        <label for="coverPhoto" class="form-label fw-bold">Foto de Capa</label>
        <input
          type="file"
          name="file"
          class="form-control"
          accept="image/*"
          required
        />
      </div>

      <!-- Epitáfio -->
      <div class="mb-4">
        <label for="epitaph" class="form-label fw-bold">Epitáfio</label>
        <input
          type="text"
          name="epitaph"
          id="epitaph"
          class="form-control"
          maxlength="120"
          required
        />
        <div class="form-text">Frase que será exibida no topo do memorial.</div>
      </div>

      <!-- Escolha de tema -->
      <div class="mb-4">
        <label for="theme" class="form-label fw-bold">Tema Visual</label>
        <select name="theme" id="theme" class="form-select" required>
          <option value="Azul">Azul</option>
          <option value="Roxo">Roxo</option>
          <option value="Vinho" selected>Vinho</option>
        </select>
      </div>

      <div class="d-flex justify-content-end mt-4">
        <button
          type="submit"
          class="btn btn-light fw-bold px-5 py-3 rounded-pill shadow"
          style="background-color: #ffffff; color: #4f0e21; border: 2px solid #4f0e21; transition: all 0.3s ease;"
          onmouseover="this.style.backgroundColor='#4f0e21'; this.style.color='white';"
          onmouseout="this.style.backgroundColor='#ffffff'; this.style.color='#4f0e21';"
        >
          Finalizar
        </button>
      </div>
    </form>
  </div>
</main>