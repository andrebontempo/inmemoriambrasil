<header class="bs-primary text-white py-3">
  <div class="container">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center">

      <!-- Logo -->
      <div class="text-center text-md-start mb-3 mb-md-0">
        <a href="/">
          <img src="/css/memorial/files/Logo_InMemoriamBrasil_1.png" alt="Logo In Memoriam Brasil"
            style="height: 55px;" />
        </a>
      </div>

      <!-- Pesquisa -->
      <div class="d-none d-md-block">
        <form action="/memorial/pesquisa" method="GET"
          class="d-flex w-100 justify-content-start justify-content-md-center mb-3 mb-md-0 ms-3">
          <div class="input-group overflow-hidden rounded-pill border shadow-sm"
            style="max-width: 350px; background-color: white;">
            <input type="text" name="q" class="form-control border-0 px-3" placeholder="Pesquisar por Memorial..."
              style="box-shadow: none;" />
            <button class="btn btn-white border-0 px-3" type="submit">
              <i class="bi bi-search text-primary"></i>
            </button>
          </div>
        </form>
      </div>

      <!-- Login -->
      <div class="d-none d-md-block">
        <div class="d-flex gap-3 justify-content-md-end justify-content-start">

          {{#if user}}
          <div class="dropdown">
            <a class="btn btn-link text-white dropdown-toggle fs-6" href="#" id="dropdownMenuButton"
              data-bs-toggle="dropdown">
              Bem-vindo(a),
              {{user.firstName}}
            </a>
            <ul class="dropdown-menu">
              {{#if (eq user.role "admin")}}
              <li><a class="dropdown-item fw-bold text-primary" href="/admin"><i class="bi bi-shield-check me-1"></i>
                  Painel Geral Admin</a></li>
              <li>
                <hr class="dropdown-divider">
              </li>
              {{/if}}
              <li><a class="dropdown-item" href="/auth/dashboard">A Minha Conta</a></li>
              <li><a class="dropdown-item" href="/auth/logout">Sair</a></li>
            </ul>
          </div>

          {{else}}
          <a href="/auth/register"
            class="text-white text-decoration-none fs-6 text-nowrap d-flex align-items-center gap-1">
            <i class="bi bi-person-plus text-white"></i>
            Criar uma conta
          </a>

          <a href="/auth/login"
            class="text-white text-decoration-none fw-bold fs-6 text-nowrap d-flex align-items-center gap-1">
            <i class="bi bi-box-arrow-in-right text-white"></i>
            Entre
          </a>

          {{/if}}

        </div>

      </div>

    </div>
  </div>
</header>